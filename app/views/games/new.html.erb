<h1>New game</h1>

<ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
</ul>

<p>What is the longest word you can find?</p>

<form action="/score" method="get" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word">
  <input type="hidden" name="grid" value="<%=@letters%>">
  <input type="submit" value="Play" class="button">
</form>
